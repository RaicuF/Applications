# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Force bash scripts to always use LF
*.sh text eol=lf
*.bash text eol=lf

# Force batch scripts to always use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Docker files
Dockerfile* text eol=lf
docker-compose*.yml text eol=lf
*.dockerfile text eol=lf

# Python files
*.py text eol=lf
*.pyi text eol=lf
requirements*.txt text eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
package*.json text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
.env* text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary